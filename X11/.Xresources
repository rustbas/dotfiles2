URxvt.iso14755: false
URxvt.iso14755_52: false

/* ╭──────────────────╮
   │ FONTS ON THE FLY │
   ╰──────────────────╯
*/

! Install "urxvt-resize-font-git" from the AUR

URxvt.perl-ext-common:  resize-font
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

*.foreground:   #d8dee9
*.background:   #1d1f21
*.cursorColor:  #d8dee9

! black
*.color0:       #2d2d2d
*.color8:       #444444

! red
*.color1:       #ed0b0b
*.color9:       #b55454

! green
*.color2:       #40a62f
*.color10:      #78a670

! yellow
*.color3:       #f2e635
*.color11:      #faf380

! blue
*.color4:       #327bd1
*.color12:      #68a7d4

! magenta
*.color5:       #b30ad0
*.color13:      #c583d0

! cyan
*.color6:       #32d0fc
*.color14:      #8adaf1

! white
*.color7:       #555555
*.color15:      #e0e3e7

URxvt*utf8: 2
URxvt*utf8Title: true
URxvt*locale: 1
!URxvt*font: xft:DejaVu Sans Mono:size=12:antialias=true:style=Book
URxvt*font: xft:JetBrainsMono Nerd Font:size=10:antialias=true:style=Book
!URxvt*font: xft:Inconsolata Nerd Font Mono:style=Medium:size=10:pixelsize=16:antialias=true
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 4
URxvt*scrollBar: false
URxvt*saveLines: 5000

!URxvt*perl-ext-common: default ,tabbedex
!URxvt*keysym.Control -Shift-N: perl:tabbedex:new_tab
!URxvt*keysym.Control -Shift-K: perl:tabbedex:next_tab
!URxvt*keysym.Control -Shift-J: perl:tabbedex:prev_tab
!URxvt.keysym.Control -Shift-R: perl:tabbedex:rename_tab
!URxvt.keysym.Control -Shift-H: perl:tabbedex:move_tab_left
!URxvt.keysym.Control -Shift-L: perl:tabbedex:move_tab_right
!URxvt*tabbedex.tabbar -fg: 15
!URxvt*tabbedex.tabbar -bg: 236
!URxvt*tabbedex.tab-fg: 110
!URxvt*tabbedex.tab-bg: 236
!URxvt*tabbedex.transparent:true
!URxvt*tabbedex.new-button: false


! ╭──────────────╮
! │ TRANSPARENCY │
! ╰──────────────╯

urxvt.termName: rxvt-256color
urxvt.depth: 24
urxvt.transparent:true
urxvt.shading: 10
urxvt.inheritPixmap: true
urxvt.fading: 10

!URxvt*inheritPixmap: true
!URxvt*transparent: false
! URxvt*shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt*shading: 15
!URxvt.depth: 2 URxvt.background: [15]#000000
